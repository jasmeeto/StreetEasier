{
    "name": "StreetEasier",
    "description": "StreetEasier is an extension to create quick directions in StreetEasy real estate listings and descriptions!",
    "version": "1.1",
    "manifest_version": 3,
    "content_scripts": [
        {
          "matches": ["*://streeteasy.com/*"],
          "js": [
                 "contentScript.js"
                ],
          "all_frames" : true,
          "run_at": "document_start"
        }
      ], 
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "webNavigation",
        "storage"
    ],
    "host_permissions": [
        "*://streeteasy.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
